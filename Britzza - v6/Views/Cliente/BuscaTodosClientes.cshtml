@model Britzza___v6.Models.ResultClienteModel
<style>

    body {
        background-color: #ffa128;
        opacity: 0.9;
    }

    .content {
        background-color: white;
    }

        .content h1 {
            font-size: 2.2rem;
            margin-left: 33%;
            color: indianred;
            font-family: sans-serif;
            padding: 60px 0 0 0;
        }

    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
        margin-top: 4%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: center;
            color: indianred;
        }

    .buttons {
        display: flex;
        flex-direction: row;
        margin: 2% 0 2% 7%;
    }
</style>
<div class="content">
    <h1>Lista de Clientes da Pizzaria</h1>
    <div class="buttons">
        <button style="width: 15%; height: 5%; color: lightgrey; font-size: 1.2rem; background-color: indianred;" onclick="documento()">Buscar por Documento</button>
        <button style="width: 15%; height: 5%; color: lightgrey; font-size: 1.2rem; background-color: indianred;" onClick="criar()">Criar Cliente</button>
        <button style="width: 15%; height: 5%; color: lightgrey; font-size: 1.2rem; background-color: indianred;" onClick="alterar()">Alterar Cliente</button>
        <button style="width: 15%; height: 5%; color: lightgrey; font-size: 1.2rem; background-color: indianred;" onClick="desabilitar()">Desabilitar Cliente</button>
        <button style="width: 15%; height: 5%; color: lightgrey; font-size: 1.2rem; background-color: indianred;" onClick="Deletar()">Deletar Cliente</button>

    </div>
    <table id="customers">
        <tr id="first" style="background: coral;">
            <th style="color: white;">NOME</th>
            <th style="color: white">DOCUMENTO</thstyle>
            <th style="color: white">ENDERECO</th>
            <th style="color: white">TELEFONE</th>
        </tr>
        <tr>
            @for (int i = 0; i < Model.ListaClientes.Count(); i++)
            {
            <tr>
                <th>@Model.ListaClientes[i].Nome</th>
                <th>@Model.ListaClientes[i].NumeroDocumento</th>
                <th>@Model.ListaClientes[i].Endereco</th>
                <th>@Model.ListaClientes[i].Telefone</th>
            </tr>
            }
    </table>

</div>
<script>
    function documento() {
        window.location = '/Cliente/BuscaClientePorDocumento'
    }
    function criar() {
        window.location = '/Cliente/CriaCliente'
    }
    function alterar() {
        window.location = '/Cliente/AlteraCliente'
    }
    function desabilitar() {
        window.location = '/Cliente/DesabilitaCliente'
    }
    function Deletar() {
        window.location = '/Cliente/DeletaCliente'
    }
</script>