@model Britzza___v6.Models.ResultClienteModel
<style>

    body {
        background-color: #ffa128;
        opacity: 0.9;
    }

    .content {
        background-color: white;
    }

        .content h1 {
            font-size: 2.2rem;
            margin-left: 33%;
            color: indianred;
            font-family: sans-serif;
            padding: 60px 0 0 0;
        }

    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
        margin-top: 4%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: center;
            color: indianred;
        }

    .identi {
        display: flex;
        flex-direction: column;
        width: 30%;
        margin-left: 36%;
    }
    /*   .identi button {
            font-size: 1.2rem;
            font-color: white;
            color: indianred;
        }*/
</style>
<div class="content">
    @if (Model.ListaClientes.Count.Equals(0))
    {
        <h1>Informe o Documento do Cliente:</h1>
        @using (Html.BeginForm("BuscaClientePorDocumento", "Cliente", FormMethod.Post))
        {
            @Html.ValidationSummary()

            <div class="identi">
                @*@Html.LabelFor(m => m.BuscaDocumento)*@
                @Html.TextBoxFor(m => m.BuscaDocumento)
                @Html.ValidationMessageFor(m => m.BuscaDocumento)
            </div>

            <button style="width: 15%; height: 5%; margin: 3% 0 9% 43%; color: lightgrey; font-size: 1.2rem; background-color: indianred;" type="submit">
                Buscar Cliente
            </button>
        }
    }
    @if (Model.ListaClientes.Count > 0)
    {
        <h1>Lista de Clientes da Pizzaria</h1>
        <table id="customers">
            <tr id="first" style="background: coral;">
                <th style="color: white;">NOME</th>
                <th style="color: white">DOCUMENTO</th>
                <th style="color: white">ENDERECO</th>
                <th style="color: white">TELEFONE</th>
            </tr>
            @for (int i = 0; i < Model.ListaClientes.Count(); i++)
            {
                <tr>
                    <th>@Model.ListaClientes[i].Nome</th>
                    <th>@Model.ListaClientes[i].NumeroDocumento</th>
                    <th>@Model.ListaClientes[i].Endereco</th>
                    <th>@Model.ListaClientes[i].Telefone</th>
                </tr>
            }
        </table>
    }
</div>
